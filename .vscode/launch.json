{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Debug Custom Card in Chrome",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:8123",
        "webRoot": "${workspaceFolder}/dist",
        "sourceMaps": true,
        "sourceMapPathOverrides": 
        {
            "webpack:///src/*": "${workspaceFolder}/src/*",
        },
        "trace": true
      },
      {
        "name": "Debug custom Card in Firefox",
        "type": "firefox",
        "request": "launch",
        "url": "http://localhost:8123/lovelace/0",
        "webRoot": "${workspaceFolder}/dist",
      }

    ]
}